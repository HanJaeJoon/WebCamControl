@model WebCameraControl.Models.IndexModel

@{
    Layout = "_Layout";
}

<div id="main" class="d-flex flex-column vh-100">
    <img src="/images/main_title.png" class="w-100" />
    <img id="main_camera" src="/images/main.gif" class="align-self-end" />
    <div class="button-container mx-auto mt-auto">
        <button type="button" id="btn-next" class="btn btn-primary btn-lg">Get started &#8594;</button>
        @*👉*@
    </div>
</div>

<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelector('#btn-next').addEventListener('click', () => {
            window.location.href = '/pay';
        });
    });
</script>
